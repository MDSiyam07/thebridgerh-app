// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  REVIEWING
  INTERVIEW_SCHEDULED
  REJECTED
  HIRED
}

model Candidate {
  id            String   @id @default(cuid())
  firstName     String
  lastName      String
  email         String   @unique
  linkedinUrl   String?
  cvFileName    String?
  skills        String
  position      String
  status        Status   @default(PENDING)
  comment       String?
  interviewDate DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("candidates")
}
